         <xs:attribute name="idCondidat" type="xs:IDREF" use="required"></xs:attribute>
      </xs:complexType>


      <!-- diplomeBbac+2 -->
   </xs:element>
   <xs:element name="diplomeBac">
      <xs:complexType>
         <xs:sequence>
            <xs:element ref="bac2" minOccurs="1" maxOccurs="1"></xs:element>
         </xs:sequence>
      </xs:complexType>
   </xs:element>
<xs:element name="bac">
      <xs:complexType>
         <xs:sequence>
            <xs:element ref="idBac" minOccurs="1" maxOccurs="1"></xs:element>
            <xs:element ref="nomBac" minOccurs="1" maxOccurs="1"></xs:element>
            <xs:element ref="typeBac" minOccurs="1" maxOccurs="1"></xs:element>
            <xs:element ref="dateObtnBac" minOccurs="1" maxOccurs="1"></xs:element>
