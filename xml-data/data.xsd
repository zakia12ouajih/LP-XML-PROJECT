            <xs:element ref="montionBac" minOccurs="1" maxOccurs="1"></xs:element>
         </xs:sequence>
         <xs:attribute name="idCondidat" type="xs:IDREF" use="required"></xs:attribute>
      </xs:complexType>

   </xs:element>

<!-- ######################################################################################################################## -->
<!-- CONCOURs -->
